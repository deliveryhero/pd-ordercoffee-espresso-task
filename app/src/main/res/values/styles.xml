<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="NavigationBarBase">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:background">@android:color/white</item>item>
    </style>

    <style name="NavigationBarButton" parent="NavigationBarBase">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="textViewStyling" parent="Theme.Valori">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="editTextLayoutStyling" parent="textViewStyling">
        <item name="colorControlNormal">@color/lightGray</item>
        <item name="colorControlActivated">@color/primaryDarkColor</item>
    </style>

    <style name="editTextViewStyling" parent="textViewStyling">
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="title" parent="textViewStyling">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/valori_blue_dark</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtitle" parent="textViewStyling">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/valori_gray</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <!--Error label title style-->
    <style name="MyErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/secondaryColor</item>
    </style>


    <style name="MyHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="BrownButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/secondaryColor</item>
        <item name="colorButtonNormal">@color/secondaryColor</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonFilled" parent="Widget.AppCompat.Button.Colored"/>

    <style name="ButtonFilled.Accent">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ButtonFilled.Accent.Brown">
        <item name="android:background">@drawable/rectangle_brown</item>
    </style>
    <style name="ButtonFilled.Accent.Turquoise">
        <item name="android:background">@drawable/rectangle_turquoise</item>
    </style>
</resources>
