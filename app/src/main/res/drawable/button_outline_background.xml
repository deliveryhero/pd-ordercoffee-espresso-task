<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/secondaryColor">
    <item>
        <shape>
            <stroke
                android:width="4dp"
                android:color="@color/secondaryColor"/>
            <corners android:radius="1dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="10dp"/>

        </shape>
    </item>
    <item android:id="@android:id/mask">
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/secondaryColor"/>
            <solid android:color="@android:color/white"/>
            <corners android:radius="1dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="10dp"/>
        </shape>
    </item>

</ripple>